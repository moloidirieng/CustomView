<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <!--solid liên quan đến màu nền-->
    <solid android:color="@color/colorAccent" />

    <!--kích thước-->
    <size android:height="150dp"
        android:width="250dp"/>
    <!--corners Bo góc-->
    <corners android:topLeftRadius="50sp"
        android:topRightRadius="50sp"
        android:radius="50dp"/>
    <!-- Khoảng cách từ nội dung của nó so với nó -->
    <padding android:bottom="50dp"/>

    <!--stroke Đường Viền: width độ dày viền,
     dashGap và dashWidth: tọa khoảng cách đứt khúc
     dashWidth: độ dài viền
    dashGap: khoảng cách giữa 2 dashWidth -->
    <stroke android:color="#ff0"
        android:width="5dp"
        android:dashGap="5dp"
        android:dashWidth="10dp"/>

    <!--Chuyển đổi màu  -->
    <gradient android:angle="225"
        android:startColor="#ff00"
        android:centerColor="#ff0"
        android:endColor="#0F45E6"/>





</shape>